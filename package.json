{
  "name": "git-notes-bot",
  "version": "1.0.0",
  "description": "GitHub Action that posts git notes as PR comments",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dashboard": "ts-node generate-dashboard.ts",
    "dashboard:watch": "ts-node generate-dashboard.ts --since '30 days ago'"
  },
  "keywords": ["github-action", "git-notes"],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2"
  }
}
